doctype html
html
    head
        title Ajax Search
        link(rel="stylesheet", href="css/bootstrap.min.css")
        script(type="text/javascript", src="js/jquery.min.js")

        script(type="text/coffeescript", src="coffee/index.coffee")
        link(rel="stylesheet/less", type="text/css", href="less/index.less")

        script(type="text/javascript", src="js/less.min.js")
        script(type="text/javascript", src="js/coffee-script.js")
    body
        .container
            .jumbotron
                h1.title Ajax Search

            .panel.panel-primary
                .panel-heading
                    h2 Mechanics
                .panel-body
                    form#search
                        input.search-bounds(type="text")
                        .search-loader.search-bounds
                            img(src="images/loader.gif")
                        ul.search-result.search-bounds
